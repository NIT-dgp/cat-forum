<% @pageTitle = "Reset Password | CAT Forum" %>
<% @PageDescription= "Reset your password with a reset link sent to your mail id" %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
      <div class="thread-card text-center">
        <h2>Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-group' }) do |f| %>
          <%= devise_error_messages! %>

          <p><%= f.label "Enter email to receive reset password instructions" %></p>
          <p><%= f.email_field :email, autofocus: true, class: 'form-control' %></p>

          <p><%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %></p>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
