
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %>
  <p><%= f.email_field :email, autofocus: true, :class => 'form-control', :type => "email" %></p>

  <%= f.label :password %>
  <p><%= f.password_field :password, autocomplete: "off", :class => 'form-control', :type => "password" %></p>

  <%= f.label :password_confirmation %>
  <p><%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', :type => "password" %></p>

  
  
  <%= f.label(:username, 'Your Name') %>
   <p><%= f.text_field(:username, class: "username-text form-control") %></p>
   
     <%= f.label :image, "Image" %>
      <p>

       <%= f.hidden_field(:image_cache) %>
  <%= f.file_field(:image) %></p>
  

   <p class="submit">
    <%= f.submit "Sign up", :class => "sign-up btn btn-primary pull-right" %>
   </p>
<% end %>