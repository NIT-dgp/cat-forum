<% @pageTitle = "Login or Signup | CAT Forum" %>
<% @PageDescription = "Log in or Signup in CAT Forum to explore more." %>
<div class="container">
  <div class="row">
    
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 profile-col">
      
      <div class="thread-card">
        <h1>Login</h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-group'}) do |f| %>
          <%= f.label :email %>
          <p><%= f.email_field :email, autofocus: true, :class => 'form-control', :type => "email" %></p>

          <%= f.label :password %>
          <p><%= f.password_field :password, autocomplete: "off", :class => 'form-control', :type => "password" %></p>

          <% if devise_mapping.rememberable? -%>
            <p class="remember_me"><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
          <% end %>
          <p class="submit">
            <%= f.submit "Sign in", :class => "sign-in-but btn btn-primary btn-block", :type => "submit", :id => "loginButton" %>
          </p>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 profile-col">
      <div class="thread-card">
        <h1>Sign Up</h1>
        <%= render :partial => "users/registrations/new"%>
      </div>
    </div>
  </div>
</div>
