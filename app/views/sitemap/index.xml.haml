!!! XML
%urlset{:xmlns => "http://www.sitemaps.org/schemas/sitemap/0.9"}
  %url
    %loc #{root_url}
    %changefreq monthly
    %priority 0.5

  - for new_thread in @new_threads
    %url
      %loc #{new_thread_url(new_thread)}/
      %lastmod=new_thread.updated_at.strftime('%Y-%m-%d')
      %changefreq monthly
      %priority 0.5

  %url
    %loc #{pages_question_url}/
    %changefreq monthly
    %priority 0.5

  %url
    %loc #{pages_badge_url}/
    %changefreq monthly
    %priority 0.5
  
  %url
    %loc #{new_user_session_url}/
    %changefreq monthly
    %priority 0.5
